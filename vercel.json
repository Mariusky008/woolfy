{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/:path*"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://woolfy-api.vercel.app",
    "VITE_PROD_API_URL": "https://woolfy-api.vercel.app"
  }
} 
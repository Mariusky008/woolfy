{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": ".vercel/output/functions",
    "rootDir": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
} 